<div class="row">
    <div class="col-center col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <ol class="breadcrumb">
                    <li><a href="/query">Query</a></li>
                    <li class="active">Cadastro</li>
                </ol>
            </div>
            <div class="panel-body">
                <%- include '/../../message.ejs %>
                <form action="/query/create" method="post">
                    <div class="row">
                        <dl class="form-group col-xs-4">
                            <dt>
                                <label for="name">Nome</label>
                            </dt>
                            <dd>
                                <input name="name" type="text" class="form-control" id="name" required>
                            </dd>
                        </dl>
                        <dl class="form-group col-xs-4">
                            <dt>
                                <label for="category">Categoria</label>
                            </dt>
                            <dd>
                                <select name="category" type="text" class="form-control" id="category" required>
                                    <option value="">Selecione uma categoria</option>
                                    <% for(var i=0; i < category.length; i++) { %>
                                    <option value="<%= category[i].id %>"><%= category[i].name %></option>
                                    <% } %>
                                </select>
                            </dd>
                        </dl>
                        <dl class="form-group col-xs-4">
                            <dt>
                                <label for="tags">Tags</label>
                            </dt>
                            <dd>
                                <input name="tags" type="text" class="form-control" id="tags">
                            </dd>
                        </dl>
                    </div>
                    <div class="row">
                        <dl class="form-group col-xs-12">
                            <dt>
                                <label for="description">Descri√ßao</label>
                            </dt>
                            <dd>
                                <textarea name="description" class="form-control" id="description"></textarea>
                            </dd>
                        </dl>
                    </div>
                    <div class="row">
                        <dl class="form-group col-xs-12">
                            <dt>
                                <label for="content">Query</label>
                            </dt>
                            <dd>
                                <textarea name="content" class="console form-control"></textarea>
                            </dd>
                        </dl>
                        <dl class="form-group col-xs-12">
                            <dd class="border-top">
                                <a href="/query" class="pull-left btn btn-primary"><span class="glyphicon glyphicon-backward"></span> Voltar</a>
                                <button type="submit" class="pull-right btn btn-success"> Cadastrar </button>
                            </dd>
                        </dl>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


