<div class="row">
    <div class="col-center col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <ol class="breadcrumb">
                    <li><a href="/query">Query</a></li>
                </ol>
            </div>
            <div class="panel-body">
                <%- include '/../../message.ejs %>

                <div class="table-responsive">
                    <table class="table table-hover table-condensed">
                        <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Tags</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for(var i=0; i < grid.length; i++) { %>
                        <tr>
                            <td><%= grid[i].name %></td>
                            <td><%= grid[i].tag %></td>
                            <td class="text-right">
                                <a href="/query/view/<%= grid[i].id %>" class="btn btn-success" title="Visualizar registro"> <span class="glyphicon glyphicon-eye-open"></span> </a>
                            </td>
                        </tr>
                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
